def eraSieve(n):
    sieve=[True]*(n+1)
    sieve[:2] = [False, False]
    sqrt = int(n**.5)+1
    for x in xrange(2, sqrt):
        if sieve[x]:
            sieve[2*x::x]=[False]*(n/x-1)
    return sieve

prime = eraSieve(100000000)
def diagonalNum(n): # n is the number of row
    increment = 2
    getDiaNum = 1
    count = 1
    limit = (n-1)/2
    sideLen = 1.0
    lst = []
    c = 0.0
    for i in xrange(1, limit + 1):
        while count <= 4:
            getDiaNum += increment
            print getDiaNum
            if prime[getDiaNum]:
                c += 1
            count += 1
        increment += 2 # Every four numbers, count increases by two.
        count = 1 # Resetting the value of count.
        sideLen += 4
    return float("%.2f" % round(c / sideLen ,2)), sideLen # Didn't count the 1st box(which had "1")

print diagonalNum(7)
